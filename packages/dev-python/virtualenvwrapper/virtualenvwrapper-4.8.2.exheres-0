require pypi setup-py [ import=setuptools ]

SUMMARY="Enhancements to virtualenv"
DESCRIPTION="
virtualenvwrapper is a set of extensions to Ian Bicking's virtualenv tool. The extensions include
wrappers for creating and deleting virtual environments and otherwise managing your development
workflow, making it easier to work on more than one project at a time without introducing conflicts
in their dependencies.
"
HOMEPAGE="https://virtualenvwrapper.readthedocs.io/"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-python/stevedore
        dev-python/virtualenv
        dev-python/virtualenv-clone
"

test_one_multibuild() {
    SHELL=/bin/bash edo tests/run_tests ${PWD}
}

