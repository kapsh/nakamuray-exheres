        !dev-python/coverage[>=4.4][python_abis:*(-)?]
        dev-python/bandit[>=1.1.0][python_abis:*(-)?]
        dev-python/mock[>=2.0.0][python_abis:*(-)?]
        dev-python/Sphinx[python_abis:*(-)?]
        dev-python/stestr[>=2.0.0][python_abis:*(-)?]
